@page
@model RegisterModel
@using Eateroo.Utility

@{
    ViewData["Title"] = "Register";
}

<br />
<h2 class="text-info">Create New Account</h2>
<br />

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="card shadow p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.Name" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.PhoneNumber" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.Street" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.Street" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.City" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.City" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.State" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.State" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-md-2">
                <label asp-for="Input.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Input.PostalCode" class="form-control" />
            </div>
        </div>

        @if(User.IsInRole(StaticDetail.ManagerUser))
        {
            <div class="form-group row align-items-center">
                <div class="col-md-2">
                    <label class="col-form-label">Account Type</label>
                </div>
                <div class="col-md-5">
                    <div>
                        <input type="radio" name="rdUserRole" value="@StaticDetail.KitchenUser" checked /> @StaticDetail.KitchenUser
                    </div>
                    <div>
                        <input type="radio" name="rdUserRole" value="@StaticDetail.FrontDeskUser" /> @StaticDetail.FrontDeskUser
                    </div>
                    <div>
                        <input type="radio" name="rdUserRole" value="@StaticDetail.ManagerUser" /> @StaticDetail.ManagerUser
                    </div>
                </div>
            </div>
   
        }

        <div class="form-group row mt-2">
            <div class="offset-md-2 col-md-10">
                <button type="submit" class="btn btn-info btn-width form-control">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}