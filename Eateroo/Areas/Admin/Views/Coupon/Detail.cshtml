@model Coupon
@using Eateroo.Extensions

@{
    ViewData["Title"] = "Coupon Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Coupon Details</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="card shadow p-4">

        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <img class="img-thumbnail mb-4" src="data:image;base64, @Convert.ToBase64String(Model.Image)" />
        }

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <input readonly asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <select disabled asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <input readonly asp-for="Discount" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <input readonly asp-for="MinimumAmount" class="form-control" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <select disabled class="form-control" asp-for="IsActive" asp-items="@{ BoolExtension.ToSelectListItemList(Model.IsActive) }"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <partial name="_DetailAndBackToListButtonPartial" model="Model.Id" />
            </div>
        </div>
    </div>
</form>