@model SubCategory
@{
    ViewData["Title"] = "Sub Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Sub Category Details</h2>
<br />

<div class="card shadow p-4">
    <div class="form-group row align-items-center">
        <div class="col-sm-3">
            <label asp-for="CategoryId" class="col-form-label"></label>
        </div>
        <div class="col-sm-9 col-lg-5">
            <input readonly asp-for="Category.Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row align-items-center">
        <div class="col-sm-3">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-sm-9 col-lg-5">
            <input readonly asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <partial name="_DetailAndBackToListButtonPartial" model="@Model.Id" />
        </div>
    </div>
</div>

