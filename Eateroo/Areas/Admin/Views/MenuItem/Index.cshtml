@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Menu Item List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="card shadow p-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info m-0">Menu Item List</h2>
        </div>
        <div class="col-4 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-responsive-sm border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Price)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().CategoryId)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().SubCategoryId)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Price)</td>
                        <td>@Html.DisplayFor(m => item.Category.Name)</td>
                        <td>@Html.DisplayFor(m => item.SubCategory.Name)</td>
                        <partial name="_TableButtonsPartial" model="item.Id" />
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-info">No menu Item has been added yet.</div>
        }
    </div>
</div>

