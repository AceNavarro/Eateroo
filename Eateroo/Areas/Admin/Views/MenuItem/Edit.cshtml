@model Eateroo.Models.ViewModels.MenuItemViewModel
@using Eateroo.Extensions
@{
    ViewData["Title"] = "Edit Menu Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Menu Item</h2>
<br />

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="card shadow p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MenuItem.Id" />

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.Name" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <input asp-for="MenuItem.Name" class="form-control" />
            </div>
            <div class="col-sm-5">
                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.Description" class="col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <textarea asp-for="MenuItem.Description" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.Price" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <input asp-for="MenuItem.Price" class="form-control" />
            </div>
            <div class="col-sm-5">
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label class="col-form-label">Current Image</label>
            </div>
            <div class="col-sm-5">
                <img class="img-thumbnail" src="@Model.MenuItem.Image" alt="Menu Item Image" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label class="col-form-label">New Image</label>
            </div>
            <div class="col-sm-5">
                <input type="file" accept="image/*" name="files" asp-for="MenuItem.Image" class="form-control-file" />
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="MenuItem.CategoryId"
                        asp-items="@Model.Categories.ToSelectListItemList(Model.MenuItem.CategoryId)"
                        class="form-control"
                        id="selectCategoryList"></select>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="MenuItem.SubCategoryId"
                        asp-items="@(new SelectList(string.Empty, "Id", "Name"))"
                        class="form-control"
                        id="selectSubCategoryList"
                        name="selectSubCategoryList"></select>
            </div>
        </div>

        <div class="form-group row align-items-center">
            <div class="col-sm-2">
                <label asp-for="MenuItem.Spiciness" class="col-form-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="MenuItem.Spiciness"
                        asp-items="@Html.GetEnumSelectList<MenuItem.SpiceType>()"
                        class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <partial name="_UpdateAndBackToListButtonPartial" model="@Model.MenuItem.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>

    <script type="text/javascript">
        $(document).ready(() => {
            getSubCategory();

            $('#selectCategoryList').change(() => {
                getSubCategory();
            });
        });

        function getSubCategory() {
            var url = '@Url.Content("~/")' + "Admin/SubCategory/GetSubCategories";
            var ddlSource = "#selectCategoryList";

            $.getJSON(url, { id: $(ddlSource).val() }, (data) => {
                var items = '';
                $('#selectSubCategoryList').empty();
                $.each(data, (i, subCategory) => {
                    items += "<option value'" + subCategory.value + "'>" + subCategory.text + "</option>";
                });
                $('#selectSubCategoryList').html(items);
            });
        };
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}